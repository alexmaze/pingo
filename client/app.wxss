/**app.wxss**/
page {
  color: #3d4785;
  background: #f3f8fe;
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page > .container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  flex-shrink: 1;
  flex-grow: 1;
  overflow: auto;
}
page > .container > .titlebar {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  background: #f3f8fe;
  padding: 8rpx 0;
  flex-grow: 0;
  flex-shrink: 0;
}
page > .container > .titlebar.blur {
  filter: blur(4rpx);
}
page > .container > .titlebar>.title {
  font-size: 36rpx;
  margin-left: 24rpx;
  position: relative;
  padding-left: 52rpx;
}
page > .container > .titlebar>.title image {
  position: absolute;
  left: 0rpx;
  top: 4rpx;
  width: 40rpx;
  height: 40rpx;
}
page > .container > .titlebar > button {
  background-color: #3d4785;
  color: white;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin: 0;
  width: fit-content;
  padding: 0 40rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-weight: 400;
  margin-right: 24rpx;
}
page > .container > .titlebar > button.open {
  background-color: #3d478588;
}
page > .container > .titlebar > button .img {
  width: 34rpx;
  height: 34rpx;
  margin: 8rpx;
}

page > .container > .content {
  margin-top: 80rpx;
  flex-grow: 1;
  flex-shrink: 1;
  transition: .2s filter;
}
page > .container > .content.blur {
  filter: blur(8rpx);
  pointer-events: none;
}

input{
  -webkit-user-select:text !important;
}

.btn-hover-change {
  opacity: 1;
  transition: .2s all;
}
.btn-hover-change:hover {
  opacity: 0.6;
}