/**index.wxss**/
page {
  color: #3d4785;
  background: #f3f8fe;
  height: 100%;
}
button {
  color: #868686;
  font-weight: 200;
}

.titlebar {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  background: #f3f8fe;
  padding: 8rpx 0;
}
.titlebar > .title {
  font-size: 36rpx;
  margin-left: 24rpx;
}
.titlebar .add-btn {
  background-color: #3d4785;
  color: white;
  border-radius: 12rpx;
  font-size: 38rpx;
  padding: 0;
  margin: 0;
  width: 72rpx;
  height: 52rpx;
  line-height: 44rpx;
  font-weight: 400;
  margin-right: 24rpx;
}

.add-menu {
  position: fixed;
  top: 100rpx;
  right: 24rpx;
  transition: all 0.2s ease;
  transform: translateY(-20%);
  pointer-events: none;
  opacity: 0;
}
.add-menu.open {
  pointer-events: all;
  opacity: 1;
  transform: translateY(0);
}
.add-menu button {
  background: #ffffff;
  color: #252525;
  border-radius: 24rpx;
  display: flex;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 0 24rpx 0 #3e468533;
}
.add-menu button .icon {
  width: 56rpx;
  height: 56rpx;
  background: #e5e8f7;
  border-radius: 12rpx;
  margin: 0 20rpx 0 2rpx;
}
.add-menu button .texts {
  text-align: left;
  line-height: 1;
}
.add-menu button .texts .title {
  display: block;
  font-size: 24rpx;
}
.add-menu button .texts .subtitle {
  font-size: 18rpx;
  color: #b6b6b6;
  font-weight: 200;
}

.list {
  margin-top: 72rpx;
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  transition: .2s all;
}
.list.blur {
  filter: blur(8rpx);
  pointer-events: none;
}

.list .order {
  min-height: 200rpx;
  width: 100%;
  background: white;
  border-radius: 24rpx;
  margin: 12rpx 0;
  padding: 24rpx;
  box-shadow: 0 0 24rpx 0 #3e468530;
  box-sizing: border-box;
}